@model UltimateBrain.Models.FinJuegoViewModel

@{
    ViewData["Title"] = "Fin de Juego";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title titulo-inicio">Fin de Juego</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center titulo-inicio" style="color:#dc3545">¡Has perdido la partida!</h4>
                    <p class="text-center titulo-inicio">Tu puntaje final: @Model.Puntaje</p>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-danger">Volver al inicio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
