@model IEnumerable<UltimateBrain.Models.Preguntum>

@{
    ViewData["Title"] = "Preguntas";
}


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-header  border-info">
                        <h2 class=""><b>Conoce nuestras preguntas</b> </h2>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TextoPregunta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categoria)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dificultad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tipo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TextoPregunta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dificultad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tipo)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>

                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



